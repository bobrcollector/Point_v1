<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ЦВЕТА -->
    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="Accent">#1976D2</Color>
    <Color x:Key="Success">#4CAF50</Color>
    <Color x:Key="Warning">#FFC107</Color>
    <Color x:Key="Error">#D32F2F</Color>
    <Color x:Key="LightBackground">#F8F9FA</Color>
    <Color x:Key="DarkBackground">#1C1C1E</Color>
    <Color x:Key="CardLight">White</Color>
    <Color x:Key="CardDark">#2C2C2E</Color>
    <Color x:Key="TextLight">Black</Color>
    <Color x:Key="TextDark">White</Color>
    <Color x:Key="HintLight">#999999</Color>
    <Color x:Key="HintDark">#8E8E93</Color>

    <!-- ENTRY - СТАНДАРТНЫЙ СТИЛЬ -->
    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#F5F5F5, Dark=#2C2C2E}"/>
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light=#999999, Dark=#8E8E93}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CharacterSpacing" Value="0.5"/>
        <Setter Property="HeightRequest" Value="48"/>
    </Style>

    <!-- EDITOR -->
    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#F5F5F5, Dark=#2C2C2E}"/>
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light=#999999, Dark=#8E8E93}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- BUTTON - PRIMARY (основные действия) -->
    <Style TargetType="Button" ApplyToDerivedTypes="False">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="MinimumHeightRequest" Value="48"/>
        <Setter Property="HeightRequest" Value="48"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="BackgroundColor" Value="#512BD4"/>
    </Style>

    <!-- BUTTON - SECONDARY (альтернативные действия) -->
    <Style TargetType="Button" x:Key="SecondaryButton">
        <Setter Property="TextColor" Value="#512BD4"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="MinimumHeightRequest" Value="48"/>
        <Setter Property="HeightRequest" Value="48"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="BorderColor" Value="#512BD4"/>
        <Setter Property="BorderWidth" Value="2"/>
    </Style>

    <!-- BUTTON - OUTLINE (контурные кнопки) -->
    <Style TargetType="Button" x:Key="OutlineButton">
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="MinimumHeightRequest" Value="48"/>
        <Setter Property="HeightRequest" Value="48"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="BorderColor" Value="{AppThemeBinding Light=#E0E0E0, Dark=#444}"/>
        <Setter Property="BorderWidth" Value="1"/>
    </Style>

    <!-- BUTTON - SMALL (маленькие кнопки для дополнительных действий) -->
    <Style TargetType="Button" x:Key="SmallButton">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="MinimumHeightRequest" Value="40"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="BackgroundColor" Value="#512BD4"/>
    </Style>

    <!-- BUTTON - ICON (круглые кнопки для иконок) -->
    <Style TargetType="Button" x:Key="IconButton">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HeightRequest" Value="48"/>
        <Setter Property="WidthRequest" Value="48"/>
        <Setter Property="MinimumHeightRequest" Value="48"/>
        <Setter Property="MinimumWidthRequest" Value="48"/>
        <Setter Property="BackgroundColor" Value="#512BD4"/>
    </Style>

    <!-- BUTTON - DANGER (опасные действия) -->
    <Style TargetType="Button" x:Key="DangerButton">
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="MinimumHeightRequest" Value="48"/>
        <Setter Property="HeightRequest" Value="48"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="BackgroundColor" Value="#D32F2F"/>
    </Style>

    <!-- FRAME - CARD STYLE -->
    <Style TargetType="Frame" x:Key="CardFrame">
        <Setter Property="Padding" Value="20"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="HasShadow" Value="True"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#2C2C2E}"/>
        <Setter Property="BorderColor" Value="Transparent"/>
    </Style>

    <!-- FRAME - SECTION HEADER CONTAINER -->
    <Style TargetType="Frame" x:Key="SectionHeaderFrame">
        <Setter Property="Padding" Value="20"/>
        <Setter Property="CornerRadius" Value="15"/>
        <Setter Property="HasShadow" Value="True"/>
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=White, Dark=#2C2C2E}"/>
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- LABEL - HEADING 1 -->
    <Style TargetType="Label" x:Key="Heading1">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- LABEL - HEADING 2 -->
    <Style TargetType="Label" x:Key="Heading2">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- LABEL - HEADING 3 / SECTION TITLE -->
    <Style TargetType="Label" x:Key="Heading3">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Black, Dark=White}"/>
        <Setter Property="Margin" Value="0,0,0,12"/>
    </Style>

    <!-- LABEL - FORM LABEL -->
    <Style TargetType="Label" x:Key="FormLabel">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#333, Dark=White}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- LABEL - BODY -->
    <Style TargetType="Label" x:Key="Body">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light=#333, Dark=White}"/>
        <Setter Property="LineHeight" Value="1.5"/>
    </Style>

    <!-- LABEL - CAPTION -->
    <Style TargetType="Label" x:Key="Caption">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextColor" Value="{AppThemeBinding Light=Gray, Dark=#A0A0A0}"/>
    </Style>

</ResourceDictionary>