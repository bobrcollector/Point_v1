<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Point_v1.Views.HomePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Point_v1.Models"
             xmlns:converters="clr-namespace:Point_v1.Converters"
             x:Name="Page"
             Title="Лента событий">

    <ContentPage.Resources>
        <converters:NegativeBooleanConverter x:Key="NegativeBooleanConverter" />
        <converters:IsNotNullOrEmptyConverter x:Key="IsNotNullOrEmptyConverter" />
        <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
        <converters:BoolToTextColorConverter x:Key="BoolToTextColorConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto">

        <!-- Гостевая плашка -->
        <Frame Grid.Row="0"
               BackgroundColor="#FFF3CD"
               BorderColor="#FFEAA7"
               Padding="15,10"
               Margin="10,5"
               CornerRadius="10"
               IsVisible="{Binding IsGuestMode}">
            <Grid ColumnDefinitions="*,Auto">
                <Label Grid.Column="0"
                       Text="Войдите, чтобы создавать события и участвовать"
                       TextColor="#856404"
                       FontSize="14"
                       VerticalOptions="Center"/>
                <Button Grid.Column="1"
                        Text="Войти"
                        Command="{Binding GoToLoginCommand}"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        Padding="20,8"
                        CornerRadius="8"/>
            </Grid>
        </Frame>

        <!-- Заголовок и переключение -->
        <Grid Grid.Row="1"
              ColumnDefinitions="*,*"
              BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#3A3A3A}"
              HeightRequest="40"
              WidthRequest="140"
              HorizontalOptions="Center"
              Margin="0,10"
              ColumnSpacing="2">

            <!-- Кнопка списка -->
            <Button Grid.Column="0"
                    Text="📋 Список"
                    Command="{Binding SwitchToListCommand}"
                    BackgroundColor="{Binding IsListView, Converter={StaticResource BoolToColorConverter}}"
                    TextColor="{Binding IsListView, Converter={StaticResource BoolToTextColorConverter}}"
                    CornerRadius="8"
                    FontSize="12"
                    FontAttributes="Bold"
                    BorderWidth="0"
                    HeightRequest="35"/>

            <!-- Кнопка карты -->
            <Button Grid.Column="1"
                    Text="🗺️ Карта"
                    Command="{Binding SwitchToMapCommand}"
                    BackgroundColor="{Binding IsMapView, Converter={StaticResource BoolToColorConverter}}"
                    TextColor="{Binding IsMapView, Converter={StaticResource BoolToTextColorConverter}}"
                    CornerRadius="8"
                    FontSize="12"
                    FontAttributes="Bold"
                    BorderWidth="0"
                    HeightRequest="35"/>
        </Grid>

        <!-- Поиск и фильтры -->
        <Frame Grid.Row="2"
               Margin="10,5"
               Padding="15"
               CornerRadius="15"
               HasShadow="True"
               BackgroundColor="{AppThemeBinding Light=White, Dark=#2C2C2E}">

            <VerticalStackLayout Spacing="10">

                <!-- Поисковая строка -->
                <Grid ColumnDefinitions="*,Auto,Auto">
                    <Entry Grid.Column="0"
                           Placeholder="Поиск событий..."
                           Text="{Binding SearchQuery}"
                           BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#3C3C3E}"
                           TextColor="{AppThemeBinding Light=Black, Dark=White}"
                           HeightRequest="45"
                           ReturnCommand="{Binding SearchCommand}"/>

                    <Button Grid.Column="1"
                            Text="🔍"
                            Command="{Binding SearchCommand}"
                            BackgroundColor="#512BD4"
                            TextColor="White"
                            WidthRequest="45"
                            HeightRequest="45"
                            Margin="10,0,5,0"
                            CornerRadius="8"/>

                    <Button Grid.Column="2"
                            Text="⚙️"
                            Command="{Binding OpenFiltersCommand}"
                            BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#444}"
                            TextColor="{AppThemeBinding Light=Black, Dark=White}"
                            WidthRequest="45"
                            HeightRequest="45"
                            Margin="5,0,0,0"
                            CornerRadius="8"/>
                </Grid>

                <!-- Активные фильтры -->
                <VerticalStackLayout Spacing="8" 
                                   IsVisible="{Binding HasActiveFilters}">

                    <Grid ColumnDefinitions="*,Auto">
                        <Label Grid.Column="0"
                               Text="Активные фильтры:" 
                               FontSize="14"
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>

                        <Button Grid.Column="1"
                                Text="Очистить все"
                                Command="{Binding ClearAllFiltersCommand}"
                                BackgroundColor="Transparent"
                                TextColor="#512BD4"
                                BorderColor="#512BD4"
                                BorderWidth="1"
                                HeightRequest="30"
                                Padding="10,0"
                                CornerRadius="15"/>
                    </Grid>

                    <!-- Список активных фильтров -->
                    <CollectionView ItemsSource="{Binding ActiveFilterLabels}"
                                    HeightRequest="40"
                                    SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="8"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame BackgroundColor="#DFD8F7"
                                       Padding="10,5"
                                       CornerRadius="15"
                                       HasShadow="False">
                                    <Label Text="{Binding .}"
                                           TextColor="#512BD4"
                                           FontSize="12"
                                           FontAttributes="Bold"/>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </Frame>

        <!-- КОНТЕЙНЕР ДЛЯ СПИСКА ИЛИ КАРТЫ -->
        <Grid Grid.Row="3">

            <!-- Лента событий (показывается когда IsListView = true) -->
            <RefreshView IsVisible="{Binding IsListView}"
                         Command="{Binding LoadEventsCommand}"
                         IsRefreshing="{Binding IsLoading}">

                <CollectionView ItemsSource="{Binding Events}"
                                SelectionMode="None">

                    <CollectionView.EmptyView>
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="15">
                            <Label Text="🎉" FontSize="40" HorizontalOptions="Center"/>
                            <Label Text="{Binding EmptyViewTitle}" 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            <Label Text="{Binding EmptyViewMessage}" 
                                   FontSize="14"
                                   TextColor="Gray"
                                   HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>

                    <!-- ItemTemplate для событий -->
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Event">
                            <Grid Padding="15,5">
                                <Frame Padding="15" 
                                       CornerRadius="15" 
                                       HasShadow="True"
                                       BackgroundColor="{AppThemeBinding Light=White, Dark=#2C2C2E}">

                                    <Frame.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewEventDetailsCommand}"
                                            CommandParameter="{Binding Id}" />
                                    </Frame.GestureRecognizers>

                                    <VerticalStackLayout Spacing="10">
                                        <!-- Заголовок и дата -->
                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Grid.Column="0"
                                                   Text="{Binding Title}" 
                                                   FontSize="18" 
                                                   FontAttributes="Bold"
                                                   LineBreakMode="TailTruncation"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding DateDisplay}" 
                                                   FontSize="12"
                                                   TextColor="Gray"/>
                                        </Grid>

                                        <!-- Описание -->
                                        <Label Text="{Binding ShortDescription}" 
                                               FontSize="14"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="2"/>

                                        <!-- Адрес и участники -->
                                        <Grid ColumnDefinitions="*,Auto">
                                            <Label Grid.Column="0"
                                                   Text="{Binding Address}" 
                                                   FontSize="12"
                                                   TextColor="Gray"
                                                   LineBreakMode="TailTruncation"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding ParticipantsCount, StringFormat='{0} 🎯'}" 
                                                   FontSize="12"
                                                   TextColor="Gray"/>
                                        </Grid>

                                        <!-- Категория -->
                                        <Frame BackgroundColor="#DFD8F7"
                                               Padding="8,4"
                                               CornerRadius="8"
                                               HasShadow="False"
                                               HorizontalOptions="Start">
                                            <Label Text="{Binding CategoryId}" 
                                                   FontSize="12"
                                                   TextColor="#512BD4"/>
                                        </Frame>
                                    </VerticalStackLayout>
                                </Frame>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>

            <!-- Карта (показывается когда IsMapView = true) -->
            <Grid IsVisible="{Binding IsMapView}">

                <!-- WebView с Яндекс Картами -->
                <WebView x:Name="MapWebView"
                         IsVisible="{Binding IsMapView}"
                         Navigating="OnMapNavigating"
                         VerticalOptions="Fill"
                         HorizontalOptions="Fill"/>

                <!-- Индикатор загрузки для карты -->
                <ActivityIndicator IsVisible="{Binding IsLoading}"
                                   IsRunning="{Binding IsLoading}"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   Color="#512BD4"
                                   Scale="2.0"/>
            </Grid>
        </Grid>

        <!-- Кнопка создания события -->
        <Button Grid.Row="4"
                Text="+ Создать событие"
                Command="{Binding CreateEventCommand}"
                BackgroundColor="#512BD4"
                TextColor="White"
                Margin="20"
                HeightRequest="50"
                CornerRadius="25"
                FontSize="16"
                FontAttributes="Bold"
                IsVisible="{Binding IsAuthenticated}"/>
    </Grid>
</ContentPage>