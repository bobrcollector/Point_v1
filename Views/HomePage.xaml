<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Point_v1.Views.HomePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Лента событий"
             x:Name="Page">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Заголовок -->
        <Label Grid.Row="0" 
               Text="Лента событий" 
               FontSize="20" 
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Padding="0,20"/>

        <!-- Лента событий -->
        <CollectionView Grid.Row="1" 
                        ItemsSource="{Binding Events}"
                        SelectionMode="None">

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="15">
                    <Label Text="🎉" FontSize="40" HorizontalOptions="Center"/>
                    <Label Text="Событий пока нет" 
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Label Text="Создайте первое событие!" 
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="15,5">
                        <!-- Карточка события -->
                        <Frame Padding="15" CornerRadius="15" HasShadow="True"
                               BackgroundColor="{AppThemeBinding Light=White, Dark=#2C2C2E}">

                            <VerticalStackLayout Spacing="10">
                                <!-- Заголовок и дата -->
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="{Binding Title}" 
                                           FontSize="18" 
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"/>

                                    <Label Grid.Column="1"
                                           Text="{Binding DateDisplay}" 
                                           FontSize="12"
                                           TextColor="Gray"/>
                                </Grid>

                                <!-- Описание -->
                                <Label Text="{Binding ShortDescription}" 
                                       FontSize="14"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"/>

                                <!-- Место и участники -->
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                           Text="{Binding Address}" 
                                           FontSize="12"
                                           TextColor="Gray"
                                           LineBreakMode="TailTruncation"/>

                                    <Label Grid.Column="1"
                                           Text="{Binding ParticipantsCount, StringFormat='{0} 🎯'}" 
                                           FontSize="12"
                                           TextColor="Gray"/>
                                </Grid>

                                <!-- Категория -->
                                <Frame BackgroundColor="#DFD8F7"
                                       Padding="8,4"
                                       CornerRadius="8"
                                       HasShadow="False"
                                       HorizontalOptions="Start">
                                    <Label Text="{Binding CategoryId}" 
                                           FontSize="12"
                                           TextColor="#512BD4"/>
                                </Frame>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- ОДНА кнопка на всю карточку -->
                        <Button BackgroundColor="Transparent"
                                Clicked="OnEventTapped"
                                CommandParameter="{Binding .}"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Баннер гостевого режима -->
        <Frame Grid.Row="2"
               IsVisible="{Binding IsGuestMode}"
               BackgroundColor="#DFD8F7"
               Padding="15"
               Margin="10"
               CornerRadius="10"
               HasShadow="True">
            <Grid ColumnDefinitions="*,Auto">
                <Label Grid.Column="0"
                       Text="Войдите, чтобы создавать события"
                       VerticalOptions="Center"/>
                <Button Grid.Column="1"
                        Text="Войти"
                        Command="{Binding GoToLoginCommand}"
                        BackgroundColor="#512BD4"
                        Padding="15,8"/>
            </Grid>
        </Frame>

        <!-- FAB для создания события -->
        <Button Grid.Row="1"
                Text="+" 
                Command="{Binding CreateEventCommand}"
                FontSize="24"
                FontAttributes="Bold"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="#512BD4"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="0,0,20,20"/>

    </Grid>
</ContentPage>