<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Point_v1.Views.RegisterPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Point_v1.Converters"
             Title="Регистрация"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}">

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" 
              VerticalOptions="Start"
              Padding="30">

            <!-- Верхний баннер -->
            <Frame Grid.Row="0"
                   BackgroundColor="#512BD4"
                   Padding="40,60"
                   CornerRadius="20"
                   HasShadow="True"
                   HorizontalOptions="Fill"
                   Margin="0,0,0,30">

                <VerticalStackLayout Spacing="15" HorizontalOptions="Center">
                    <Label Text="🚀" 
                           FontSize="40"
                           HorizontalOptions="Center"/>

                    <Label Text="Присоединяйтесь!" 
                           FontSize="28" 
                           TextColor="White"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <Label Text="Создайте новый аккаунт" 
                           FontSize="16" 
                           TextColor="#DFD8F7"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Форма регистрации -->
            <VerticalStackLayout Grid.Row="1" Spacing="20">

                <!-- Сообщения -->
                <Label Text="{Binding SuccessMessage}" 
       IsVisible="{Binding SuccessMessage, Converter={converters:IsNotNullOrEmptyConverter}}"
       TextColor="#2E7D32" 
       FontSize="14"
       HorizontalOptions="Center"
       Padding="15,10"
       HorizontalTextAlignment="Center"/>

                <!-- Сообщения об ошибках -->
                <Label Text="{Binding ErrorMessage}" 
       IsVisible="{Binding ErrorMessage, Converter={converters:IsNotNullOrEmptyConverter}}"
       TextColor="#D32F2F" 
       FontSize="14"
       HorizontalOptions="Center"
       Padding="15,10"
       HorizontalTextAlignment="Center"/>
                <!-- Поля формы -->
                <VerticalStackLayout Spacing="15">
                    <!-- Имя пользователя -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Имя пользователя" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333, Dark=White}"/>
                        <Entry Placeholder="Придумайте имя" 
                               Text="{Binding DisplayName}"
                               BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2C2C2E}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"
                               HeightRequest="50"/>
                    </VerticalStackLayout>

                    <!-- Email -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Email" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333, Dark=White}"/>
                        <Entry Placeholder="your@email.com" 
                               Text="{Binding Email}"
                               Keyboard="Email"
                               BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2C2C2E}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"
                               HeightRequest="50"/>
                    </VerticalStackLayout>

                    <!-- Пароль -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Пароль" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333, Dark=White}"/>
                        <Entry Placeholder="Минимум 6 символов" 
                               Text="{Binding Password}"
                               IsPassword="True"
                               BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2C2C2E}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"
                               HeightRequest="50"/>
                    </VerticalStackLayout>

                    <!-- Подтверждение пароля -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Подтвердите пароль" 
                               FontSize="14" 
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light=#333, Dark=White}"/>
                        <Entry Placeholder="Повторите пароль" 
                               Text="{Binding ConfirmPassword}"
                               IsPassword="True"
                               BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2C2C2E}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"
                               HeightRequest="50"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>

                <!-- Кнопка регистрации -->
                <Button Text="Создать аккаунт" 
                        Command="{Binding RegisterCommand}"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="10"
                        Margin="0,10,0,0"/>

                <!-- Переход ко входу -->
                <Button Text="Войти в аккаунт" 
                    Command="{Binding GoToLoginPageCommand}"
                    BackgroundColor="Transparent"
                    TextColor="#512BD4"
                    BorderColor="#512BD4"
                    BorderWidth="1"
                    HeightRequest="45"
                    Margin="0,20,0,0"/>

            </VerticalStackLayout>

            <!-- Индикатор загрузки -->
            <ActivityIndicator Grid.Row="2"
                             IsVisible="{Binding IsBusy}" 
                             IsRunning="{Binding IsBusy}"
                             Color="#512BD4"
                             HorizontalOptions="Center"
                             VerticalOptions="End"
                             HeightRequest="50"/>

        </Grid>
    </ScrollView>
</ContentPage>