<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Point_v1.Views.EditProfilePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Point_v1.Converters"
             Title="Редактирование профиля">

    <ContentPage.Resources>
        <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
        <converters:BoolToTextColorConverter x:Key="BoolToTextColorConverter" />
        <converters:BoolToBorderColorConverter x:Key="BoolToBorderColorConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="16" Padding="20">

            <!-- Заголовок -->
            <Label Text="Редактирование профиля" 
                   Style="{StaticResource Heading2}"
                   HorizontalOptions="Center"
                   Margin="0"/>

            <!-- Аватар -->
            <Frame HorizontalOptions="Center" 
                   Padding="0"
                   CornerRadius="75"
                   BackgroundColor="Transparent"
                   HeightRequest="150"
                   WidthRequest="150"
                   HasShadow="True">

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ChangeAvatarCommand}" />
                </Frame.GestureRecognizers>

                <!-- Просто показываем Image, он сам разберется с источником -->
                <Image Source="{Binding AvatarImage}"
                       Aspect="AspectFill"
                       BackgroundColor="#512BD4"
                       HeightRequest="150"
                       WidthRequest="150">
                </Image>
            </Frame>

            <Button Text="Изменить аватар" 
                    Command="{Binding ChangeAvatarCommand}"
                    Style="{StaticResource OutlineButton}"/>

            <!-- Основная информация -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Основная информация" 
                       Style="{StaticResource Heading3}"/>

                <!-- Имя -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Имя пользователя" 
                           Style="{StaticResource FormLabel}"/>
                    <Entry Text="{Binding DisplayName}"
                           Placeholder="Введите ваше имя"/>
                </VerticalStackLayout>

                <!-- Город -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Город" 
                           Style="{StaticResource FormLabel}"/>
                    <Entry Text="{Binding City}"
                           Placeholder="Введите ваш город"/>
                </VerticalStackLayout>

                <!-- О себе -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="О себе" 
                           Style="{StaticResource FormLabel}"/>
                    <Editor Text="{Binding About}"
                            Placeholder="Расскажите о себе..."
                            HeightRequest="100"/>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Интересы -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Мои интересы" 
                       Style="{StaticResource Heading3}"/>
                <Label Text="{Binding InterestsStatus}" 
                       FontSize="12"
                       TextColor="Gray"
                       Margin="0,-4,0,4"/>
                <ScrollView HeightRequest="200">
                    <FlexLayout BindableLayout.ItemsSource="{Binding AllInterests}"
                                Direction="Row"
                                Wrap="Wrap"
                                JustifyContent="Start"
                                AlignItems="Start"
                                AlignContent="Start">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Button Text="{Binding Name}"
                                        Clicked="OnInterestClicked"
                                        BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}"
                                        TextColor="{Binding IsSelected, Converter={StaticResource BoolToTextColorConverter}}"
                                        CornerRadius="20"
                                        Padding="16,8"
                                        Margin="4"
                                        FontSize="14"
                                        BorderWidth="1"
                                        BorderColor="{Binding IsSelected, Converter={StaticResource BoolToBorderColorConverter}}"/>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </ScrollView>
            </VerticalStackLayout>

            <!-- Кнопки действий -->
            <VerticalStackLayout Spacing="10" Margin="0,12,0,0">
                <Button Text="Сохранить изменения" 
                        Command="{Binding SaveProfileCommand}"/>

                <Button Text="Отмена" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource OutlineButton}"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>