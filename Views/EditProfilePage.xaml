<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Point_v1.Views.EditProfilePage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Редактирование профиля">

    <ScrollView>
        <VerticalStackLayout Spacing="16" Padding="20">

            <!-- Заголовок -->
            <Label Text="Редактирование профиля" 
                   Style="{StaticResource Heading2}"
                   HorizontalOptions="Center"
                   Margin="0"/>

            <!-- Аватар -->
            <Frame HorizontalOptions="Center" 
                   Padding="0"
                   CornerRadius="75"
                   BackgroundColor="Transparent"
                   HeightRequest="150"
                   WidthRequest="150"
                   HasShadow="True">

                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ChangeAvatarCommand}" />
                </Frame.GestureRecognizers>

                <!-- Просто показываем Image, он сам разберется с источником -->
                <Image Source="{Binding AvatarImage}"
                       Aspect="AspectFill"
                       BackgroundColor="#512BD4"
                       HeightRequest="150"
                       WidthRequest="150">
                </Image>
            </Frame>

            <Button Text="Изменить аватар" 
                    Command="{Binding ChangeAvatarCommand}"
                    Style="{StaticResource OutlineButton}"/>

            <!-- Основная информация -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Основная информация" 
                       Style="{StaticResource Heading3}"/>

                <!-- Имя -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Имя пользователя" 
                           Style="{StaticResource FormLabel}"/>
                    <Entry Text="{Binding DisplayName}"
                           Placeholder="Введите ваше имя"/>
                </VerticalStackLayout>

                <!-- Город -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Город" 
                           Style="{StaticResource FormLabel}"/>
                    <Entry Text="{Binding City}"
                           Placeholder="Введите ваш город"/>
                </VerticalStackLayout>

                <!-- О себе -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="О себе" 
                           Style="{StaticResource FormLabel}"/>
                    <Editor Text="{Binding About}"
                            Placeholder="Расскажите о себе..."
                            HeightRequest="100"/>
                </VerticalStackLayout>
            </VerticalStackLayout>

            <!-- Интересы -->
            <VerticalStackLayout Spacing="12">
                <Label Text="Мои интересы" 
                       Style="{StaticResource Heading3}"/>

                <Button Text="Выбрать интересы ➕"
                        Command="{Binding SelectInterestsCommand}"
                        Style="{StaticResource SmallButton}"
                        BackgroundColor="#DFD8F7"
                        TextColor="#512BD4"/>

                <!-- Список выбранных интересов -->
                <CollectionView ItemsSource="{Binding SelectedInterests}"
                                SelectionMode="None"
                                HeightRequest="80">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="8"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="#DFD8F7"
                                   Padding="10,5"
                                   CornerRadius="12"
                                   Margin="2"
                                   HasShadow="False">
                                <Label Text="{Binding Name}"
                                       TextColor="#512BD4"
                                       FontSize="12"
                                       FontAttributes="Bold"/>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <!-- Кнопки действий -->
            <VerticalStackLayout Spacing="10" Margin="0,12,0,0">
                <Button Text="Сохранить изменения" 
                        Command="{Binding SaveProfileCommand}"/>

                <Button Text="Отмена" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource OutlineButton}"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>