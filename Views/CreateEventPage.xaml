<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Point_v1.Views.CreateEventPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Создать событие">

    <ContentPage.Content>
        <VerticalStackLayout Spacing="20" Padding="20" HorizontalOptions="Center" VerticalOptions="Center">

            <Label Text="Создание события" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label Text="Эта функция находится в разработке" 
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"/>

            <Button Text="Назад" 
                    Clicked="OnBackClicked"
                    BackgroundColor="#512BD4"
                    HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>