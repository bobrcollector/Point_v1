<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Point_v1.Views.FilterPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Фильтры"
             Shell.NavBarIsVisible="True"
             BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#1C1C1E}">

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="0">

            <!-- Основной контент -->
            <VerticalStackLayout Spacing="16" Padding="20" Margin="0,12,0,0">

                <!-- Поиск -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="Поиск" 
                           Style="{StaticResource Heading3}"/>
                    <Entry Placeholder="Введите текст для поиска..."
                           Text="{Binding SearchText}"/>
                </VerticalStackLayout>

                <!-- Категория -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="Категория" 
                           Style="{StaticResource Heading3}"/>
                    <Picker Title="Выберите категорию"
                            ItemsSource="{Binding AvailableCategories}"
                            SelectedItem="{Binding SelectedCategory}"
                            HeightRequest="48"/>
                </VerticalStackLayout>

                <!-- Дата -->
                <VerticalStackLayout Spacing="12">
                    <Label Text="Дата события" 
                           Style="{StaticResource Heading3}"/>
                    <DatePicker Date="{Binding SelectedDate}"
                                HeightRequest="48"/>
                </VerticalStackLayout>

                <!-- Кнопки действий -->
                <Grid ColumnDefinitions="*,*" 
                      ColumnSpacing="10"
                      Margin="0,16,0,0">

                    <Button Grid.Column="0"
                            Text="Сбросить всё"
                            Command="{Binding ResetFiltersCommand}"
                            Style="{StaticResource OutlineButton}"/>

                    <Button Grid.Column="1"
                            Text="Применить"
                            Command="{Binding ApplyFiltersCommand}"/>
                </Grid>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>